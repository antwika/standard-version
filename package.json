{
  "license": "MIT",
  "name": "@antwika/standard-version",
  "version": "0.1.3",
  "private": false,
  "engines": {
    "node": ">=16.15"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/cli.js",
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts ./test/**/*.ts --fix",
    "posttest": "npm run lint",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration --runInBand --collectCoverage=false",
    "coverage": "nyc report --reporter=lcov",
    "release": "npm run lint && npm run test && npm run build && node ./bin/cli.js",
    "prepare": "husky install"
  },
  "nyc": {
    "exclude": [
      "tmp/**"
    ]
  },
  "devDependencies": {
    "@types/jest": "28.1.5",
    "@types/node": "18.0.0",
    "@types/semver": "7.3.10",
    "@types/shelljs": "0.8.11",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "eslint": "8.19.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-standard": "17.0.0",
    "eslint-import-resolver-typescript": "3.2.5",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "nyc": "15.1.0",
    "shelljs": "0.8.5",
    "ts-jest": "28.0.5",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "conventional-changelog": "3.1.25",
    "conventional-changelog-config-spec": "2.1.0",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "conventional-recommended-bump": "6.1.0",
    "detect-indent": "^6.0.0",
    "detect-newline": "^3.1.0",
    "dotgitignore": "^2.1.0",
    "find-up": "^5.0.0",
    "git-semver-tags": "^4.0.0",
    "semver": "^7.1.1",
    "yargs": "^17.0.0"
  },
  "files": [
    "bin",
    "dist"
  ],
  "repository": "git@github.com:antwika/standard-version.git",
  "bugs": {
    "url": "https://github.com/antwika/standard-version/issues"
  },
  "homepage": "https://github.com/antwika/standard-version#readme"
}
