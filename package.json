{
  "license": "MIT",
  "name": "@antwika/standard-version",
  "version": "0.1.150",
  "private": false,
  "engines": {
    "node": ">=16.15"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/cli.js",
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts ./test/**/*.ts --fix",
    "posttest": "npm run lint",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration --runInBand --collectCoverage=false",
    "coverage": "nyc report --reporter=lcov",
    "release": "npm run lint && npm run test && npm run build && node ./bin/cli.js",
    "prepare": "husky install"
  },
  "nyc": {
    "exclude": [
      "tmp/**"
    ]
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.15.3",
    "@types/semver": "7.7.0",
    "@types/shelljs": "0.8.15",
    "@typescript-eslint/eslint-plugin": "8.31.1",
    "@typescript-eslint/parser": "8.31.1",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-import-resolver-typescript": "4.3.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "26.9.0",
    "eslint-plugin-n": "17.17.0",
    "eslint-plugin-promise": "7.2.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "nyc": "17.1.0",
    "shelljs": "0.9.2",
    "ts-jest": "29.3.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "conventional-changelog": "4.0.0",
    "conventional-changelog-config-spec": "2.1.0",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "conventional-recommended-bump": "7.0.1",
    "detect-indent": "^6.0.0",
    "detect-newline": "^3.1.0",
    "dotgitignore": "^2.1.0",
    "find-up": "^5.0.0",
    "git-semver-tags": "^6.0.0",
    "semver": "^7.1.1",
    "yargs": "^17.0.0"
  },
  "files": [
    "bin",
    "dist"
  ],
  "repository": "git@github.com:antwika/standard-version.git",
  "bugs": {
    "url": "https://github.com/antwika/standard-version/issues"
  },
  "homepage": "https://github.com/antwika/standard-version#readme"
}
